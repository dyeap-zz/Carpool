<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="5"
    android:orientation="horizontal"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/ims">

    <TextView
        android:layout_width="300dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:text="@string/display_username"
        android:textSize="64sp"
        android:gravity="center"
        android:textColor="#00ffff"
        android:textColorHint="#00ffff" />

    <Button
        android:id="@+id/view_event"
        android:text="@string/event"
        android:textSize="48sp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_above="@+id/add_friend"
        android:onClick="view_event"
        android:textColor="#00ffff"
        android:textColorHint="#00ffff"
        android:background="@drawable/button_format"
        android:alpha="0.75"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/view_log"
        android:text="@string/log"
        android:textSize="48sp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_above="@+id/sign_out"
        android:layout_alignParentRight="true"
        android:onClick="view_log"
        android:textColor="#00ffff"
        android:textColorHint="#00ffff"
        android:background="@drawable/button_format"
        android:alpha="0.75"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/add_friend"
        android:text="@string/friend"
        android:textSize="48sp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="add_friend"
        android:textColor="#00ffff"
        android:textColorHint="#00ffff"
        android:background="@drawable/button_format"
        android:alpha="0.75"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/sign_out"
        android:text="@string/sign_out"
        android:textSize="48sp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="sign_out"
        android:textColor="#00ffff"
        android:textColorHint="#00ffff"
        android:background="@drawable/button_format"
        android:alpha="0.75"
        android:layout_margin="5dp"/>


</RelativeLayout>
