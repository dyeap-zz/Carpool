<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/ims"
    tools:context="com.parse.starter.AccountActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/change_password"
            android:text="@string/change_password"
            android:onClick="ChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignParentTop="true"
            android:layout_gravity="right" />

        <ImageView
            android:layout_width="116dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:src="@drawable/logo"
            android:layout_weight="0.12" />

        <TextView
            android:id="@+id/username"
            android:text="@string/username"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center|top"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff" />


        <Button
            android:id="@+id/view_event"
            android:text="@string/view_event"
            android:onClick="ViewEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.16" />

        <Button
            android:id="@+id/view_view_events"
            android:text="@string/view_view_events"
            android:onClick="ViewViewEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.16" />

        <Button
            android:id="@+id/view_log"
            android:text="@string/view_log"
            android:onClick="ViewLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.16" />

        <Button
            android:id="@+id/add_friend"
            android:text="@string/add_friend"
            android:onClick="AddFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.16" />

        <Button
            android:id="@+id/sign_out"
            android:text="@string/sign_out"
            android:onClick="SignOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.16" />

    </LinearLayout>

</RelativeLayout>
