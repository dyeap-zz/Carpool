<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/ims"
    tools:context="com.parse.starter.ChangePasswordActivity">

    <TextView
        android:id="@+id/username"
        android:text="@string/username"
        android:layout_width="315dp"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center|top"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff" />

    <EditText android:id="@+id/change_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.16"
        android:hint="@string/change_password"
        android:singleLine="true"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_below="@+id/join"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="51dp" />

    <Button
        android:id="@+id/update_password"
        android:text="@string/update_password"
        android:onClick="Update_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.16"
        android:hint="@string/confirm_password"
        android:singleLine="true"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/change_password"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
